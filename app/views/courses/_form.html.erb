<div class="flex-row d-flex justify-content-center">
  <div class="col-md-8">
    <div class="card mt-5">
      <div class="card-body">
        <%= form_for @course do |f| %>
          <div class="form-group">
            <%= f.label :title%>
            <%= f.text_field :title, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :video %>
          </div>

          <div class="form-group">
            <%= f.file_field :video %>
          </div>

          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control', rows: 20 %>
          </div>

          <%= f.submit class: 'btn btn-outline-primary' do %>
            <%= t("Update courses") %>
          <% end %>
          <%= link_to t("Back"), courses_path, class: 'btn btn-outine-secondary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>